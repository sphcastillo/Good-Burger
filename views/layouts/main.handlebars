<script>

$(document).ready(function() {
    $("#devourMeButton").on("click", function(event) {
      var id = $(this).data("id");
      
  

      $.ajax("/api/burgers/" + id, {
        type: "PUT",

      }).then(
        function() {

          location.reload();
        }
      );
    });
  
    $("#formButton").on("submit", function(event) {
      event.preventDefault();
  
      var newBurger = {
        name: $("#burger").val().trim()
      };
  
      $.ajax("/api/burgers", {
        type: "POST",
        data: newBurger
      }).then(
        function() {
          console.log("created new burger");

          location.reload();
        }
      );
    });
  

});
  
